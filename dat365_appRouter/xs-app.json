{
  "authenticationMethod": "route",
  "logout": {
    "logoutEndpoint": "/do/logout"
  },
  "routes": [{
    "source": "/catalog/(.*)",
    "destination": "srv_api",
    "csrfProtection": true,
    "authenticationType": "xsuaa"
  }, {
    "source": "/odata/v4/(.*)",
    "destination": "srv_api",
    "csrfProtection": true,
    "authenticationType": "xsuaa"
  }, {
    "source": "/node(.*)",
    "destination": "srv_api",
    "csrfProtection": true,
    "authenticationType": "xsuaa"
  }, {
    "source": "^(.*)$",
    "target": "$1",
    "localDir": "../ui/webapp",
    "authenticationType": "xsuaa"    
  }]
}